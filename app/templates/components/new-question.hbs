{{#if addNewQuestion}}
  <h2>New Question</h2>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author Name:</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="question">Question:</label>
        {{input value=questionAsked id="questionAsked"}}
      </div>

      <div class="form-group">
        <label for="notes">Additional Notes:</label>
        {{input value=notes id="notes"}}
      </div>
      <button {{action 'saveQuestion'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
